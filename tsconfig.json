{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "out",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "preserveWatchOutput": true
  },
  "exclude": [
    "node_modules",
    "views/*"
  ]
}
